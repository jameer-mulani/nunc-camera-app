<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.nuncsystems.cameraapp.videolist.VideoListFragment"
        android:label="@string/video_list_fragment_label"
        tools:layout="@layout/fragment_video_list">

        <action
            android:id="@+id/action_VideoListFragment_to_VideoCapturerFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.nuncsystems.cameraapp.VideoCaptureFragment"
        android:label="@string/capture_video_fragment_label"
        tools:layout="@layout/fragment_video_capture">
    </fragment>
</navigation>